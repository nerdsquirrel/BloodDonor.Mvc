@model BloodDonor.Mvc.Models.ViewModel.BloodDonorListViewModel

@{
    ViewData["Title"] = "Donor Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="row g-0">
            <div class="col-md-4 text-center p-4">
                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                {
                    <img src="~/@Model.ProfilePicture" class="img-fluid rounded-circle border" style="max-width: 200px;" />
                }
                else
                {
                    <i class="fas fa-user-circle fa-5x text-secondary"></i>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.FullName</h3>
                    <p><strong>Blood Group:</strong> @Model.BloodGroup</p>
                    <p><strong>Contact:</strong> @Model.ContactNumber</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Address:</strong> @Model.Address</p>
                    <p><strong>Age:</strong> @Model.Age</p>
                    <p><strong>Last Donation:</strong> @Model.LastDonationDate</p>
                    <p>
                        <strong>Eligibility:</strong>
                        <span class="badge @(Model.IsEligible ? "bg-success" : "bg-danger")">
                            @(Model.IsEligible ? "Eligible" : "Not eligible")
                        </span>
                    </p>

                    <div class="mt-3 d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <a asp-controller="BloodDonor" asp-action="AddToCampaign" asp-route-donorId="@Model.Id" class="btn btn-primary">
                            Add to Campaign
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Campaigns Section -->
    <div class="card shadow-sm mt-5">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Participated Campaigns (@Model.Campaigns.Count)</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Campaigns.Any())
            {
                <table class="table table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Location</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var campaign in Model.Campaigns)
                        {
                            <tr>
                                <td>@campaign.Title</td>
                                <td>@campaign.Location</td>
                                <td>@campaign.StartDate.ToShortDateString()</td>
                                <td>@campaign.EndDate.ToShortDateString()</td>
                                <td>
                                    <a asp-controller="Campaign" asp-action="Details" asp-route-id="@campaign.Id" class="btn btn-sm btn-info">View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="p-3">No campaigns associated with this donor yet.</p>
            }
        </div>
    </div>

    <!-- Donations Section -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Donation History (@Model.Donations.Count)</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Donations.Any())
            {
                <table class="table table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Donor Name</th>
                            <th>Donation Date</th>
                            <th>Campaign</th>
                            <th>Location</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var donation in Model.Donations)
                        {
                            <tr>
                                <td>@donation.DonorName</td>
                                <td>@donation.DonationDate.ToShortDateString()</td>
                                <td>@donation.Campaign</td>
                                <td>@donation.Location</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="p-3">No donations recorded for this donor yet.</p>
            }
        </div>
    </div>

</div>